<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainFragment">


    <Spinner
        android:id="@+id/spinnerLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/sendBtnOne"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="Send Data Server One"
        app:layout_constraintEnd_toStartOf="@+id/sendBtnTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerLanguage" />

    <Button
        android:id="@+id/sendBtnTwo"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="Send Data Server Two"
        android:layout_marginRight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerLanguage" />

</androidx.constraintlayout.widget.ConstraintLayout>